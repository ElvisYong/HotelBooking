<Window x:Class="HotelBooking.Popups.BookingFull"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelBooking.Popups"
        mc:Ignorable="d"
        Title="BookingFull" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,62,0,0" TextWrapping="Wrap" Text="The booking that you have chosen is currently full. Please choose another day." VerticalAlignment="Top"/>
        <Button x:Name="btnClose" Content="Close&#xA;" HorizontalAlignment="Left" Margin="112,108,0,0" VerticalAlignment="Top" Width="70" Height="19" Click="btnClose_Click"/>

    </Grid>
</Window>
